<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/metal</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="RobotoSlabViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/roboto_slab_bold</item>
    </style>

    <style name="H1" parent="RobotoSlabViewStyle">
        <item name="android:fontFamily">@font/roboto_slab_bold</item>
        <item name="android:textSize">@dimen/h1_text_size</item>
        <item name="android:textColor">#565C67</item>
    </style>

    <style name="H1.Light" parent="H1">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Caption" parent="Body">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColorLink">@color/pastel_blue</item>
        <item name="android:textSize">@dimen/caption_text_size</item>
        <item name="android:textColor">@color/metal</item>
    </style>

    <style name="Body" parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">@dimen/body_text_size</item>
    </style>

    <style name="Footer.Light" parent="Body">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/footer_text_size</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ActionBarTextStyle" parent="Body">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/actionbar_text_size</item>
    </style>

</resources>

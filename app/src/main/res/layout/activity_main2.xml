<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4F4F4F"
    tools:context=".MainActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <no.danielzeller.metaballslib.menu.DirectionalMenu
        android:id="@+id/circularMenuTopRight"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Hello World!"
        app:close_animation_duration="1300"
        app:close_interpolator_resource="@anim/overshoot_interpolator"
        app:delay_between_items_animation="40"
        app:expand_direction="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:main_button_color="@color/default_metaballs_color"
        app:main_button_icon="@drawable/ic_share_black_24dp"
        app:main_button_icon_color="@color/white"
        app:open_animation_duration="1300"
        app:open_interpolator_resource="@anim/overshoot_interpolator"
        app:position_gravity="top_right" />

    <no.danielzeller.metaballslib.menu.DirectionalMenu
        android:id="@+id/circularMenuTopLeft"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:close_animation_duration="1300"
        app:close_interpolator_resource="@anim/overshoot_interpolator"
        app:delay_between_items_animation="40"
        app:expand_direction="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:main_button_color="@color/default_metaballs_color"
        app:main_button_icon="@drawable/ic_share_black_24dp"
        app:main_button_icon_color="@color/white"
        app:open_animation_duration="1300"
        app:open_interpolator_resource="@anim/overshoot_interpolator"
        app:position_gravity="top_left" />

    <no.danielzeller.metaballslib.menu.DirectionalMenu
        android:id="@+id/circularMenuBottomLeft"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:close_animation_duration="1300"
        app:close_interpolator_resource="@anim/overshoot_interpolator"
        app:delay_between_items_animation="40"
        app:expand_direction="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:main_button_color="@color/default_metaballs_color"
        app:main_button_icon="@drawable/ic_share_black_24dp"
        app:main_button_icon_color="@color/white"
        app:open_animation_duration="1300"
        app:open_interpolator_resource="@anim/overshoot_interpolator"
        app:position_gravity="bottom_left" />

    <no.danielzeller.metaballslib.menu.DirectionalMenu
        android:id="@+id/circularMenuBottomRight"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:delay_between_items_animation="100"
        app:expand_direction="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:main_button_color="@color/default_metaballs_color"
        app:main_button_icon="@drawable/ic_share_black_24dp"
        app:main_button_icon_color="@color/white"
        app:position_gravity="bottom_right" />

    <no.danielzeller.metaballslib.menu.DirectionalMenu
        android:id="@+id/circularMenuCenter"
        android:layout_width="0dp"
        android:layout_height="0dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:delay_between_items_animation="0"
        app:expand_direction="horizontal"
        app:main_button_color="@color/default_metaballs_color"
        app:main_button_icon="@drawable/ic_twitter"
        app:main_button_icon_color="@color/white"
        app:position_gravity="center" />

    <no.danielzeller.metaballslib.progressbar.MBProgressBar
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:colors_array_id="@array/gradient_spinner_colors"
        app:drop_drawable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.347"
        app:rotate="true" />

    <no.danielzeller.metaballslib.progressbar.MBProgressBar
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:colors_array_id="@array/gradient_spinner_colors"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.654"
        app:progressbar_type="blobs"
        app:rotate="true" />

    <no.danielzeller.metaballslib.progressbar.MBProgressBar
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:colors_array_id="@array/gradient_spinner_colors"
        app:drop_drawable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.04"
        app:progressbar_type="eight"
        app:rotate="false" />

    <no.danielzeller.metaballslib.progressbar.MBProgressBar
        android:id="@+id/dotsSpinner"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:colors_array_id="@array/gradient_spinner_colors"
        app:drop_drawable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.959"
        app:progressbar_type="dots" />

    <no.danielzeller.metaballslib.progressbar.MBProgressBar
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:colors_array_id="@array/gradient_spinner_colors"
        app:drop_drawable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.939"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.654"
        app:progressbar_type="square"
        app:rotate="true" />

    <no.danielzeller.metaballslib.progressbar.MBProgressBar
        android:layout_width="120dp"
        android:layout_height="80dp"
        app:colors_array_id="@array/gradient_spinner_colors"
        app:drop_drawable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.939"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.347"
        app:progressbar_type="long_path"
        app:rotate="false" />


    <no.danielzeller.metaballslib.MetaBallPageIndicator
        android:id="@+id/pageIndicator"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/transparent_black"
        app:selected_dot_color="@color/colorPrimary"
        app:un_selected_dot_color="@color/colorAccent"
        app:dot_size="40dp"
        app:dot_margin="50dp"
        />

</android.support.constraint.ConstraintLayout>